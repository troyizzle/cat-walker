<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }, dom_id: (resource)) do |f| %>
  <%= f.error_explanation %>
  <%= f.tw_text_field :username, { placeholder: 'Username', class: 'w-full' } %>
  <%= f.tw_password_field :password, { autocomplete: 'current-password', class: 'w-full' } %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= f.rich_submit "Log in" %>
<% end %>
